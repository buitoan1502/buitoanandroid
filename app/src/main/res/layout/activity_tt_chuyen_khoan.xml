<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FBEDDA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ttChuyenKhoan">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="248dp"
        android:layout_height="52dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/londrinasolidregular"
        android:gravity="center"
        android:textColor="#EFCF4B"
        android:text="HELLO CÀ PHÊ"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="349dp"
        android:layout_height="340dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/qrmaremovebgpreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:layout_width="247dp"
        android:id="@+id/pay"
        android:layout_height="61dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/baloopaaji2variablefontwght"

        android:text="PAY"
        android:background="#F1C17E"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView

        android:id="@+id/imageView3"
        android:layout_width="152dp"
        android:layout_height="94dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>