<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8E7"
    android:padding="16dp">

    <!-- Header với biểu tượng menu và tên thương hiệu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Menu icon -->
        <ImageView
            android:layout_width="42dp"
            android:layout_height="43dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Menu Icon"
            android:src="@drawable/basoc" />

        <!-- Tên thương hiệu -->
        <TextView
            android:layout_width="315dp"
            android:layout_height="33dp"
            android:text="HELLO CÀ PHÊ"
            android:gravity="center"
            android:textColor="#D4A017"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- GridLayout chứa các hộp thông tin -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="8dp">

        <!-- Hộp thông tin: Số đơn hàng -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

            <!-- Viền cam -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D4A017"
                android:padding="8dp">

                <!-- Nền xám -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D3D3D3"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/giohang"
                        android:contentDescription="Cart Icon"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Hộp thông tin: Thanh toán bằng tiền mặt -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

            <!-- Viền cam -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D4A017"
                android:padding="8dp">

                <!-- Nền xám -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D3D3D3"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/tietmat"
                        android:contentDescription="Cash Icon"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500.000"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash payment"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Hộp thông tin: Thanh toán qua chuyển khoản -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

            <!-- Viền cam -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D4A017"
                android:padding="8dp">

                <!-- Nền xám -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D3D3D3"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/chuyenkhoan"
                        android:contentDescription="Transfer Icon"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.500.000"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment by transfer"
                        android:textSize="15sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Hộp thông tin: Số lượng đồ uống -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

            <!-- Viền cam -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D4A017"
                android:padding="8dp">

                <!-- Nền xám -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D3D3D3"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/macdinh"
                        android:contentDescription="Drink Icon"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drinks"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </GridLayout>

</LinearLayout>
