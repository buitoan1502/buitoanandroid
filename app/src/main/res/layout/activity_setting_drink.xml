<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FBEDDA"
    android:padding="16dp">
    <ImageView
        android:id="@+id/basoc"
        android:layout_width="48dp"
        android:layout_height="51dp"
        android:src="@drawable/basoc"
        />

    <TextView
        android:layout_width="301dp"
        android:layout_height="58dp"

        android:layout_marginStart="60dp"
        android:gravity="center"
        android:text="HELLO CÀ PHÊ"
        android:textColor="#EFCF4B"
        android:textSize="36dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Chọn hình ảnh đồ uống"
        android:textColor="#999999" />
    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="367dp"
        android:layout_height="160dp"
        android:background="@color/white"
        android:scaleType="centerCrop"

        android:textColor="#999999" />

    <EditText
        android:id="@+id/itemName"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:hint="Tên đồ uống"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/itemimform"
        android:layout_width="371dp"
        android:layout_height="198dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:hint="Mô tả đồ uống"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/itemPrice"
        android:layout_width="183dp"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:background="@color/white"
        android:hint="Giá"
        android:layout_marginTop="8dp"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="171dp"
            android:layout_height="47dp"

            android:layout_marginLeft="10dp"
            android:backgroundTint="#999999"

            android:drawablePadding="8dp"

            android:padding="8dp"
            android:text="Delete"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="171dp"
            android:layout_height="47dp"
            android:layout_marginLeft="29dp"
            android:backgroundTint="#999999"

            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="Update"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>





</LinearLayout>